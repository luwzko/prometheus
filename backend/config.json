{
    "model": {
        "name": "anthropic/claude-3.7-sonnet",
        "base_url": "https://openrouter.ai/api/v1/chat/completions",
        "max_tokens": 4096,
        "temperature": 0.2
    },

    "prometheus": {
        "main_agent": {
            "prompt": "resources/prompts/prometheus_prompt.txt"
        },

        "workflow": {
            "prompt": "resources/prompts/workflow_prompt.txt"
        },

        "reflector": {
            "prompt": "resources/prompts/reflector_prompt.txt"
        },
        "action_manager": {
            "think_agent": {
                "prompt": "resources/prompts/action_agents/think_prompt.txt"
            },
            "code_agent": {
                "prompt": "resources/prompts/action_agents/code_prompt.txt"
            }
        }
    }
}